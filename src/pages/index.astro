---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const coinsCollection = await getCollection('coins');

export const prerender = true
---

<Layout title="Cazamonedas">
	<main>
		<h1 class="text-center text-7xl font-extrabold mb-24">
			<span class="block">Cazamonedas</span>
		</h1>

	<section aria-label="Libros recomendados para programadores">
		<div class="px-4 mx-auto max-w-screen-xl">
			<div class="grid gap-6 md:grid-cols-2">
				{
					coinsCollection.map(coin => {
						const { slug, data } = coin
						const { country, countrySlug, imageUrl, reason, year} = data

						return (
							<article class="flex">
								<a href={`/coin/${countrySlug}/${year}`} class="mb-2 xl:mb-0 transition hover:scale-110">
									<img
										transition:name={`img-${slug}`}
										class="mr-5 w-48 rounded"
										src={`/${imageUrl}`}
										alt={reason}
									/>
								</a>

								<div class="flex flex-col justify-center">
									<h2 transition:name={`title-${slug}`} class="mb-2 text-2xl font-bold leading-tight text-white">
										{country} - {year}
									</h2>

									<p transition:name={`reason-${slug}`} class="mb-4 text-gray-300 max-w-sm">{reason}</p>
								</div>
							</article>
						)
					})
				}
			</div>
		</div>
	</section>
</Layout>